<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.greegoapp.greegodriver.Activity.UserRateActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rlRequest"
        android:layout_width="match_parent"
        android:background="@mipmap/ic_user_everywhere"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/request"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_50"
        android:textStyle="bold"
       android:gravity="center" />

    <ImageView
        android:id="@+id/imgVwLyftUber"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/scale_150dp"
        android:src="@mipmap/icluftuberblog"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/tvRequest" />
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlRequest" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_home"
            android:background="@color/white"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_30"
            android:padding="@dimen/scale_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
